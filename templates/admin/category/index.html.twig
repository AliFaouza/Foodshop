    <table class="table table-hover">
        <h1>Liste des cat√©gories</h1>
        <tr>
            <th>ID</th>
            <th> Nom </th>
            <th>Action</th>
        </tr>
        {% for category in categories %}
        <tr>
           
            <th scope="row">{{ category.id }}</th>
            <td>{{category.Nom}}</td> 
            <td>
                <a href="{{path('app_admin_category_delete', {id: category.id})}}">supprimer</a>
